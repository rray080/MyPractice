<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".DiceRollerActivity">
    <TextView
            android:text="@string/rollTextView"
            android:layout_width="361dp"
            android:layout_height="156dp"
            android:id="@+id/txtRollHeader"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp" android:layout_marginRight="8dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="8dp"
            android:layout_marginStart="8dp"
            android:gravity="center_horizontal|center_vertical"
            android:textSize="48sp" android:textStyle="bold" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toBottomOf="parent" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/btnRoll" android:textColor="@color/colorAccent"/>
    <Button
            android:text="@string/rollBtnRoll"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/btnRoll" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            android:layout_marginRight="24dp"
            android:layout_marginBottom="24dp"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="24dp" app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintHorizontal_bias="0.662" app:layout_constraintVertical_bias="0.053"
            android:textSize="30sp" android:textStyle="bold"/>
</android.support.constraint.ConstraintLayout>